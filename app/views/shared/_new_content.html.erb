<div class="row">
  <div class="col-12 col-sm px-4">
    <div class="form-group-vertical mt-4">
      <%= f.label :title, t('.title')%><br>
      <%= f.text_field :title, {placeholder: "#{content} Title", class: "form-control col-11"}%>
    </div>
    <div class="form-group-vertical my-4">
      <%= f.label :sharing, t('.public_mode')%><br>
      <%= select_tag(:sharing,
        options_for_select([
        [t('.public'), true],
        [t('.private'), false]
        ], true),
        {class: "col-5 custom-select"})%>
    </div>
  </div>
  <div class="col-12 col-sm px-4">
    <div class="form-group-vertical mt-4">
      <%= f.label :description, t('.description')%><br>
      <%= f.text_area :description, {placeholder: "#{content} Description", class: "form-control", rows: "5", cols: "80"}%>
    </div>
  </div>
</div>
<div class="row mx-2 my-3">
  <div class="form-group-vertical bg-grey rounded add-photo square-200">
    <%= f.file_field :image, {class: "square-200 o-0"}%>
  </div>
</div>
<div class="row mx-2 my-5">
  <%= submit_tag t('.save'), {class: "btn add px-3"}%>
</div>
