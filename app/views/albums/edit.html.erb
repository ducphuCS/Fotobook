<div class="container-fluid">
  <%= render "shared/homebar" %>
  <div class="row bg-grey">
    <%= render "shared/feed_discover"%>
    <div class="col-sm-9 col-12 p-3">
      <div class="col bg-white pb-3 mb-5">
        <div class="font-weight-bold border-bottom pt-4 pb-3 justify-content-between row mx-1 font-size-20">
          <div class="col">
            <%= t ('.header')%>
          </div>
          <div class="col-auto ">
            <%= link_to t('.back'), user_path(current_user.id), {class: "btn chosen"}%>
          </div>
        </div>
        <%= form_for @photo, url: album_path, method: :patch do |f| %>
          <%= render partial: "shared/edit_album", locals: {f: f}%>
          <div class="row mx-2 my-5 justify-content-between w-200">
            <%= submit_tag t('.save'), {class: "btn add px-3"}%>
            <%= link_to t('.delete'), album_path(@album.id), {class: "btn delete px-3", method: :delete}%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>
