<div class="container-fluid font">
  <%= render "shared/homebar_unauthenticated"%>
  <div class="row h-20">
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="text-center text-color"><%= t ('.fotobook_signup')%></h2>
    </div>
  </div>
  <div class="row justify-content-center my-4">
    <div class="col-sm-3 col-8 row border rounded-lg py-2 justify-content-center" >
      <img src="https://img.icons8.com/color/48/000000/google-logo.png" class="img-fluid col-auto" />
      <img src="https://img.icons8.com/color/48/000000/facebook-circled.png" class="img-fluid col-auto" />
      <img src="https://img.icons8.com/color/48/000000/twitter-circled.png" class="img-fluid col-auto" />
    </div>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-sm-4 col-8 row justify-content-center shadow border rounded bg-grey mb-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-5 col", id: "signup_form"} )  do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group mx-3 font-size-16">
          <%= f.label :firstname, t('.firstname')%><br />
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", placeholder: "First Name", class: "border rounded-lg form-control pl-3 h-50" %>
        </div>

        <div class="field form-group mx-3 font-size-16">
          <%= f.label :lastname, t('.lastname')%><br />
          <%= f.text_field :lastname, autocomplete: "lastname", placeholder: "Last Name", class: "border rounded-lg form-control pl-3 h-50"%>
        </div>

        <div class="field form-group mx-3 font-size-16">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "border rounded-lg form-control pl-3 h-50"%>
        </div>

        <div class="field form-group mx-3">
          <%= f.label :password, t('.password') %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "border rounded-lg form-control pl-3 h-50"%>
        </div>

        <div class="field form-group mx-3">
          <%= f.label :password_confirmation, t('.password_confirmation') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "border rounded-lg form-control pl-3 h-50"%>
        </div>

        <div class="actions form-group row justify-content-center font-size-16">
          <%= f.submit "Sign up", {class: "btn chosen col-4 rounded-lg h-50"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
